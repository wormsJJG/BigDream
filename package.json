{
  "name": "BD-SCANNER",
  "version": "1.0.0",
  "description": "Mobile Scanner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "electron-builder --win portable --ia32",
    "build:win64": "electron-builder --win portable --x64",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "pack": "electron-builder"
  },
  "author": "Big Dream Security",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^7.10.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/app_icon",
        "extraResource": [
          "ios-tools",
          "platform-tools"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "BD_Scanner",
            "setupIcon": "assets/setUpIcon.ico"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@electron-forge/cli": "^7.10.2",
    "adb": "^0.2.0",
    "adbkit": "^2.11.1",
    "app-info-parser": "^1.1.6",
    "axios": "^1.13.2",
    "child_process": "^1.0.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "google-play-scraper": "^10.1.2",
    "xml2js": "^0.6.2"
  },
  "build": {
    "productName": "BD-Scanner",
    "appId": "com.bigdream.bdscanner"
  }
}
